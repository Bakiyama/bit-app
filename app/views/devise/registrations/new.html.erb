<%= render "shared/second_header" %>

<div class='main'>
  
  <div class="regist_blk">
    <div class="top-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
      <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
      <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
      </svg>
      <div class="registration">Registration</div>
    </div>
  </div>

  <div class="regist_blk">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :nickname, placeholder:"ニックネーム", class:"input_field", autocomplete: "nickname" %>
      </div>

      <div class="field">
        <%= f.email_field :email, placeholder:"メールアドレス", class:"input_field", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder:"パスワード（６文字以上）", class:"input_field", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder:"パスワード（再確認）", class:"input_field", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
    
  </div>

</div>
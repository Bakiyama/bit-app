<%= render "shared/second_header" %>

<div class='main'>

  <div class="regist_blk">
    <div class="top-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
      <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z"/>
      </svg>
      <div class="registration">Sign In</div>
    </div>
  </div>

  <div class="regist_blk">
    <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      
      <div class="field">
        <%= f.email_field :email, placeholder:"メールアドレス", class:"input_field", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder:"パスワード（６文字以上）", class:"input_field", autocomplete: "new-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>  
</div>